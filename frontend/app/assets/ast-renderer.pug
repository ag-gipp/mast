html
  head
    title Abstract Syntax Tree

    link(rel='stylesheet' type='text/css' href='/app.css')
    script(src='vendor.js', type='text/javascript')
    script(src='app.js', type='text/javascript')
body
  .container-fluid
    .panel.panel-primary
      .panel-heading
        h3.panel-title MathML - AST Renderer
      .panel-body
        .row
          .col
            form(onsubmit='return callAPI(event)')
              .form-group
                label(for='pmml') Presentation MathML
                div#pmml
                label(for='cmml') Content MathML
                div#cmml
              .form-group
                label(for='MathMLexamples') or choose an example
                select.form-control#MathMLexamples
                  option(value = renderer[0]) Euler
                  option(value = renderer[1]) MRR
                  option(value = renderer[2]) Wide AST
                  option(value = renderer[5]) Einstein
                  option(
                  value = renderer[9]
                  selected='selected'
                  ) Goat
              input.btn.btn-success(value='Update', onclick="update()")
              input.btn.btn-success(type='submit', value='Reset')
              a.btn-download(href='#', onclick='renderPNG()' download='ast-formula.png' style="display: none;") download rendering as PNG
          .col
            div#preview
            div#mast
  div#tooltipTemplate(style="display: none;")
    Loading a new image...
  script.
    require("ast-renderer.js");
